class SoundWave:
    def __init__(self, frequency, amplitude):
        self.frequency = frequency
        self.amplitude = amplitude

    def transmit(self):
        print(f"A sound wave is being transmitted at {self.frequency} Hz frequency and {self.amplitude} amplitude.")

# Create an instance of a sound wave
sound_wave = SoundWave(440, 0.5)

# Transmit the sound wave
sound_wave.transmit()
